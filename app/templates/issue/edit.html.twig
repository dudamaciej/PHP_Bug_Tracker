{% extends 'base.html.twig' %}

{% block title %}Edit Issue - Bug Tracker{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">Edit Issue: {{ issue.title }}</h4>
            </div>
            <div class="card-body">
                <form method="post" action="{{ path('issue_edit', {id: issue.id}) }}">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" class="form-control" id="title" name="issue[title]" value="{{ issue.title }}" required>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" id="description" name="issue[description]" rows="5" required>{{ issue.description }}</textarea>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="status" class="form-label">Status</label>
                                <select class="form-select" id="status" name="issue[status]" required>
                                    <option value="open" {{ issue.status == 'open' ? 'selected' : '' }}>Open</option>
                                    <option value="in_progress" {{ issue.status == 'in_progress' ? 'selected' : '' }}>In Progress</option>
                                    <option value="closed" {{ issue.status == 'closed' ? 'selected' : '' }}>Closed</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="priority" class="form-label">Priority</label>
                                <select class="form-select" id="priority" name="issue[priority]" required>
                                    <option value="low" {{ issue.priority == 'low' ? 'selected' : '' }}>Low</option>
                                    <option value="medium" {{ issue.priority == 'medium' ? 'selected' : '' }}>Medium</option>
                                    <option value="high" {{ issue.priority == 'high' ? 'selected' : '' }}>High</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="category" class="form-label">Category</label>
                        <select class="form-select" id="category" name="issue[category]" required>
                            {% for category in categories %}
                                <option value="{{ category.id }}" {{ issue.category.id == category.id ? 'selected' : '' }}>{{ category.name }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Update Issue</button>
                        <a href="{{ path('issue_show', {id: issue.id}) }}" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %} 